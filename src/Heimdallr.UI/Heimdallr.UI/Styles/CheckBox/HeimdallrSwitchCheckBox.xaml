<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls"
                    xmlns:cnvts="clr-namespace:Heimdallr.UI.Converters">

  <!--#region Brushes[각 Brushes 는 컨트롤에 사용될 색상 또는 그라디언트 정의]-->
  <!-- 수직방향(위->아래)의 그라디언트 갈색계열-->
  <LinearGradientBrush x:Key="ToggleBorderBrush" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="#FF9F8449" Offset="0"/>
    <GradientStop Color="#FF7D612B" Offset="0.5"/>
    <GradientStop Color="#FF5D4828" Offset="1"/>
  </LinearGradientBrush>

  <!-- 토글 OFF 상태 배경 수평방향(왼쪽 -> 오른쪽) 남색 계열-->
  <LinearGradientBrush x:Key="ToggleOffBackgroundBrush" StartPoint="0,0.5" EndPoint="1,0.5">
    <GradientStop Color="#FF22404B" Offset="0"/>
    <GradientStop Color="#FF20313A" Offset="0.5"/>
    <GradientStop Color="#FF1F2D34" Offset="1"/>
  </LinearGradientBrush>

  <!-- 토글 ON 상태 배경 수평방향 초록새 계열-->
  <LinearGradientBrush x:Key="ToggleOnBackgroundBrush" StartPoint="0,0.5" EndPoint="1,0.5">
    <GradientStop Color="#FF2C5138" Offset="0"/>
    <GradientStop Color="#FF327E3F" Offset="0.3"/>
    <GradientStop Color="#FF349C44" Offset="0.5"/>
    <GradientStop Color="#FF349C44" Offset="1"/>
  </LinearGradientBrush>

  <!-- Thumb(Border)의 기본테두리와 마우스 오버 시의 테두리를 다르게 표현-->
  <LinearGradientBrush x:Key="ThumbBorderBrush" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="#FFB79858" Offset="0"/>
    <GradientStop Color="#FF93712F" Offset="0.5"/>
    <GradientStop Color="#FF664D27" Offset="1"/>
  </LinearGradientBrush>

  <!-- Thumb(Border)의 기본테두리와 마우스 오버 시의 테두리를 다르게 표현-->
  <LinearGradientBrush x:Key="ThumbBorderBrushOver" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="#FFEDE2CD" Offset="0"/>
    <GradientStop Color="#FFD2B67C" Offset="0.5"/>
    <GradientStop Color="#FFC3973D" Offset="1"/>
  </LinearGradientBrush>
  <!--#endregion -->

  <!-- Styles 토글 바(Track) Border 적용 배경과 테두리 브러시도 지정되어 기본 상태로 사용됩니다. -->
  <Style x:Key="SwitchTrackStyle" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource ToggleOffBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource ToggleBorderBrush}"/>
    <Setter Property="CornerRadius" Value="12 12 10 10"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="UseLayoutRounding" Value="True"/>
    <Setter Property="SnapsToDevicePixels" Value="True" />
  </Style>

  <!-- Thumb 스타일 [Thumb은 스위치의 움직이는 동그란 부분입니다 Thumb 위치는 Margin="-8,0,0,0"으로 왼쪽으로 살짝 튀어나오게 설정.
       HorizontalAlignment="Left"로 초기 위치를 왼쪽에 고정 -->
  <Style x:Key="SwitchThumbStyle" TargetType="Border">
    <Setter Property="BorderBrush" Value="{StaticResource ThumbBorderBrush}"/>
    <Setter Property="Background" Value="{StaticResource ToggleOffBackgroundBrush}"/>
    <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Self}, Path=Height}" />
    <Setter Property="Height" 
            Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type ctrls:HeimdallrSwitchCheckBox}}, 
                      Path=Height, Converter={cnvts:HeimdallrSwitchCheckBoxThumbSizeConverter}}" />
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="CornerRadius" Value="20"/>
    <!-- 원형이므로 절반으로 변경 -->
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Margin" Value="0"/>
    <!-- 음수 마진 제거 -->
    <Setter Property="UseLayoutRounding" Value="True"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
  </Style>

  <!-- Content 영역 스타일 [텍스트나 라벨 등 콘텐츠를 오른쪽에 띄우는 스타일입니다. Grid.Column="1"로 위치 지정. -->
  <Style x:Key="ContentStyle" TargetType="ContentPresenter">
    <Setter Property="Grid.Column" Value="1"/>
    <Setter Property="Margin" Value="5 0 5 0"/>
  </Style>

  <QuadraticEase x:Key="SwitchEase" EasingMode="EaseInOut" />

  <!-- Control Template [전체 컨트롤 스타일] -->
  <!-- ControlTemplate for HeimdallrSwitchCheckBox -->
  <Style TargetType="{x:Type ctrls:HeimdallrSwitchCheckBox}">
    <Setter Property="Width" Value="60"/>
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="Height" Value="30"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:HeimdallrSwitchCheckBox}">
          <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">

            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Toggle Track -->
            <Border x:Name="SwitchTrack"
                    Style="{StaticResource SwitchTrackStyle}"
                    Width="{TemplateBinding Width}"
                    Height="{TemplateBinding Height}"
                    UseLayoutRounding="True"
                    SnapsToDevicePixels="True"/>

            <!-- Thumb with Icon -->
            <Border x:Name="Thumb"
                     Style="{StaticResource SwitchThumbStyle}"
                     Height="{TemplateBinding Height}"
                     UseLayoutRounding="True"
                     SnapsToDevicePixels="True">

              <Viewbox StretchDirection="Both"
                       Width="{Binding Width, RelativeSource={RelativeSource AncestorType=Border}, Converter={cnvts:HeimdallrSwitchCheckBoxIconSizeConverter}}"
                       Height="{Binding Height, RelativeSource={RelativeSource AncestorType=Border}, Converter={cnvts:HeimdallrSwitchCheckBoxIconSizeConverter}}">
                <ctrls:HeimdallrIcon x:Name="ThumbIcon"
                                     Icon="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}"
                                     Fill="{Binding Fill, RelativeSource={RelativeSource TemplatedParent}}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Stretch="Uniform"/>
              </Viewbox>
            </Border>

            <!-- State Text: ON -->
            <TextBlock x:Name="OnText"
                       Text="{TemplateBinding OnLabel}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="8,0,0,0"
                       Foreground="{TemplateBinding OnLebelForeground}"
                       FontWeight="SemiBold"
                       Visibility="Collapsed"
                       FontSize="14"
                       MaxWidth="60"
                       TextTrimming="CharacterEllipsis" />

            <!-- State Text: OFF -->
            <TextBlock x:Name="OffText"
                       Text="{TemplateBinding OffLabel}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,8,0"
                       Foreground="{TemplateBinding OffLebelForeground}"
                       FontWeight="SemiBold"
                       Visibility="Visible"
                       FontSize="14"
                       MaxWidth="60"
                       TextTrimming="CharacterEllipsis"/>

            <!-- Content area -->
            <ContentPresenter Grid.Column="1"
                              Style="{StaticResource ContentStyle}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Margin="10 0 0 0" />

            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal"/>
                <VisualState x:Name="MouseOver">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Thumb" Storyboard.TargetProperty="BorderBrush">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ThumbBorderBrushOver}"/>
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ThumbIcon" Storyboard.TargetProperty="Fill">
                      <DiscreteObjectKeyFrame KeyTime="0">
                        <DiscreteObjectKeyFrame.Value>
                          <SolidColorBrush>#F0E6D2</SolidColorBrush>
                        </DiscreteObjectKeyFrame.Value>
                      </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>

              <VisualStateGroup x:Name="CheckStates">
                <VisualState x:Name="Checked">
                  <Storyboard>
                    <!-- 트랙과 배경 색상 -->
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SwitchTrack" Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ToggleOnBackgroundBrush}"/>
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Thumb" Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ToggleOnBackgroundBrush}"/>
                    </ObjectAnimationUsingKeyFrames>
                    <!-- Label 텍스트 및 위치 변경 -->
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OnText"
                       Storyboard.TargetProperty="Visibility">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OffText"
                       Storyboard.TargetProperty="Visibility">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>

                <VisualState x:Name="Unchecked">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SwitchTrack" Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ToggleOffBackgroundBrush}"/>
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Thumb" Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ToggleOffBackgroundBrush}"/>
                    </ObjectAnimationUsingKeyFrames>
                    <!-- Label 텍스트 및 위치 변경 -->
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OnText"
                       Storyboard.TargetProperty="Visibility">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
                    </ObjectAnimationUsingKeyFrames>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OffText"
                       Storyboard.TargetProperty="Visibility">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>