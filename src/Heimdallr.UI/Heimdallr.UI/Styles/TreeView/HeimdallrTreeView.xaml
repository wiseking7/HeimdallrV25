<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls">

  <Style TargetType="{x:Type ctrls:HeimdallrTreeView}">
    <!-- TreeView Boder 색상(투명처리) -->
    <Setter Property="BorderBrush" Value="Transparent" />

    <!-- TreeView Boder 배경색(투명처리) -->
    <Setter Property="Background" Value="Transparent" />

    <Setter Property="Cursor" Value="Hand" />

    <!-- TreeView ControlTemplate 정의 -->
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:HeimdallrTreeView}">
          <!-- SnapsToDevicePixels="True" 내부 경계선도 픽셀 정렬-->
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  SnapsToDevicePixels="True"
                  CornerRadius="{TemplateBinding CornerRadius}">

            <Grid Grid.IsSharedSizeScope="True">
              <ctrls:HeimdallrStackPanel
                   StripeColor1="#2F3E46"
                   StripeColor2="#CAD2C5"
                   VerticalAlignment="Top"
                   ItemHeight="{Binding ElementName=Items, Path=ActualHeight}">
              </ctrls:HeimdallrStackPanel>
              <ItemsPresenter x:Name="Items" VerticalAlignment="Top" />
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
