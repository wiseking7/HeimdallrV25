<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls"
                    xmlns:cnvts="clr-namespace:Heimdallr.UI.Converters">

  <Style TargetType="{x:Type ctrls:HeimdallrPulseEllipseButton}" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="SnapsToDevicePixels" Value="True" />
    <Setter Property="UseLayoutRounding" Value="True" />
    <Setter Property="Background" Value="Transparent" />
    
    <!-- 기본적용-->
    <Setter Property="Icon" Value="None" />
    <Setter Property="IconSize" Value="13" />
    <Setter Property="IconFill" Value="#FF4A47A3" />
    <Setter Property="ShapeMode" Value="Free" />
    <Setter Property="Ellipse1Brush" Value="#FF577B8D" />
    <Setter Property="Ellipse2Brush" Value="#FF7A1CAC" />
    <Setter Property="Ellipse3Brush" Value="#FFB9B4C7" />
    <Setter Property="Width" Value="40" />
    <Setter Property="Height" Value="40" />

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:HeimdallrPulseEllipseButton}">
          <Grid x:Name="RootGrid">
            <!-- 바깥쪽 원 -->
            <Ellipse x:Name="ellipse1"
                     Fill="{TemplateBinding Ellipse1Brush}"
                     Margin="0" />
            <!-- 중간 원 -->
            <Ellipse x:Name="ellipse2"
                     Fill="{TemplateBinding Ellipse2Brush}"
                     Margin="5" />
            <!-- 안쪽 원 -->
            <Ellipse x:Name="ellipse3"
                     Fill="{TemplateBinding Ellipse3Brush}"
                     Margin="10" />

            <!-- ★ ellipse3 안쪽 영역 전용 Grid -->
            <Grid x:Name="IconContainer"
                  Margin="10"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center">

              <!-- 아이콘을 ellipse3의 크기에 맞춰 정확히 중앙 정렬 -->
              <Viewbox Stretch="Uniform"
                       Width="{TemplateBinding IconSize}"
                       Height="{TemplateBinding IconSize}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
                <ctrls:HeimdallrIcon x:Name="icon"
                                     Icon="{TemplateBinding Icon}"
                                     Fill="{TemplateBinding IconFill}" />
              </Viewbox>
            </Grid>
          </Grid>

          <!-- 리소스: 클릭 애니메이션 -->
          <ControlTemplate.Resources>
            <Storyboard x:Key="ColorChangeStoryboard">
              <ColorAnimation Storyboard.TargetName="ellipse1"
                             Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                             To="Orange" Duration="0:0:0.3" AutoReverse="True" />
              <ColorAnimation Storyboard.TargetName="ellipse2"
                             Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                             To="Teal" Duration="0:0:0.3" AutoReverse="True" />
              <ColorAnimation Storyboard.TargetName="ellipse3"
                             Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                             To="Tomato" Duration="0:0:0.3" AutoReverse="True" />
            </Storyboard>
          </ControlTemplate.Resources>

          <!-- 트리거들 -->
          <ControlTemplate.Triggers>
            <!-- 클릭 시 애니메이션 -->
            <EventTrigger RoutedEvent="Button.Click">
              <BeginStoryboard Storyboard="{StaticResource ColorChangeStoryboard}" />
            </EventTrigger>

            <!-- 마우스 오버 시 Glow 효과 -->
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="ellipse1" Property="Effect">
                <Setter.Value>
                  <DropShadowEffect Color="#FF3DC2EC" BlurRadius="10" ShadowDepth="0" />
                </Setter.Value>
              </Setter>
              <Setter TargetName="ellipse2" Property="Effect">
                <Setter.Value>
                  <DropShadowEffect Color="#FFF2F7A1" BlurRadius="10" ShadowDepth="0" />
                </Setter.Value>
              </Setter>
              <Setter TargetName="ellipse3" Property="Effect">
                <Setter.Value>
                  <DropShadowEffect Color="#FFF05941" BlurRadius="10" ShadowDepth="0" />
                </Setter.Value>
              </Setter>
            </Trigger>

            <!-- 눌렸을 때 축소 -->
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="RootGrid" Property="RenderTransform">
                <Setter.Value>
                  <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                </Setter.Value>
              </Setter>
              <Setter TargetName="RootGrid" Property="RenderTransformOrigin" Value="0.5,0.5" />
            </Trigger>

            <!-- 포커스 시 강조선 -->
            <Trigger Property="IsFocused" Value="True">
              <Setter Property="BorderBrush" Value="DeepSkyBlue" />
              <Setter Property="BorderThickness" Value="2" />
            </Trigger>

            <!-- ★ 핵심 : ShapeMode=Circle → Width=Height 강제 -->
            <Trigger Property="ShapeMode" Value="Circle">
              <Setter Property="Height"
                      Value="{Binding Width, RelativeSource={RelativeSource TemplatedParent}}" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>