<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls">

  <Style TargetType="{x:Type ctrls:HeimdallrPulseButton}" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="#FFFFFFFF" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="2 2" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="MinWidth" Value="80" />
    <Setter Property="MinHeight" Value="30" />
    <Setter Property="Height" Value="40" />
    <Setter Property="Width" Value="120" />

    <!-- 기본 커스텀 설정-->
    <Setter Property="IconSize" Value="24" />
    <Setter Property="IconFill" Value="#FFD8D8D8" />
    <Setter Property="MouseOverBackground" Value="#FFA5C9CA" />
    <Setter Property="MouseOverBorderBrush" Value="#FFD8D8D8" />
    <Setter Property="PressedBackground" Value="#FF3795BD" />
    <Setter Property="PressedBorderBrush" Value="#FFD8D8D8" />
    <Setter Property="FocusedBorderBrush" Value="#FFD8D8D8" />
    <Setter Property="FocusedBorderThickness" Value="2" />

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:HeimdallrPulseButton}">
          <Border x:Name="border"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{TemplateBinding CornerRadius}"
                  SnapsToDevicePixels="True"
                  UseLayoutRounding="True">

            <Grid Margin="{TemplateBinding Padding}">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <!-- 아이콘 -->
              <Viewbox Grid.Column="0"  
                       Margin="2 0 0 0"
                       Stretch="Uniform"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       MaxWidth="{TemplateBinding IconSize}"
                       MaxHeight="{TemplateBinding IconSize}">
                <ctrls:HeimdallrIcon Icon="{TemplateBinding Icon}"
                                     Fill="{TemplateBinding IconFill}" />
              </Viewbox>
              <!-- 텍스트 -->
              <TextBlock Grid.Column="1"
                         Margin="5 0 0 0"
                         Text="{TemplateBinding ButtonText}"
                         VerticalAlignment="Center"
                         Foreground="{TemplateBinding Foreground}"
                         FontWeight="SemiBold"
                         TextTrimming="CharacterEllipsis" />
            </Grid>
          </Border>

          <!-- 트리거 -->
          <ControlTemplate.Triggers>
            <!-- 마우스 오버 시 배경 및 테두리 변경 -->
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="border" Property="Background" Value="{Binding MouseOverBackground, RelativeSource={RelativeSource TemplatedParent}}" />
              <Setter TargetName="border" Property="BorderBrush" Value="{Binding MouseOverBorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
            </Trigger>

            <!-- 클릭 시 배경 변경 -->
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="border" Property="Background" Value="{Binding PressedBackground, RelativeSource={RelativeSource TemplatedParent}}" />
              <Setter TargetName="border" Property="BorderBrush" Value="{Binding PressedBorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
            </Trigger>

            <!-- 포커스 시 테두리 강조 -->
            <Trigger Property="IsFocused" Value="True">
              <Setter TargetName="border" Property="BorderBrush" Value="{Binding FocusedBorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
              <Setter TargetName="border" Property="BorderThickness" Value="{Binding FocusedBorderThickness, RelativeSource={RelativeSource TemplatedParent}}" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>