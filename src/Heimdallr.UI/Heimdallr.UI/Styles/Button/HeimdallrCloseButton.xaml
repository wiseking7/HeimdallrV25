<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls">

  <Style TargetType="{x:Type ctrls:HeimdallrCloseButton }" >
    <Setter Property="Margin" Value="2" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:HeimdallrCloseButton}">
          <Border Background="{TemplateBinding Background}"
                  Width="{TemplateBinding IconSize}"
                  Height="{TemplateBinding IconSize}" >
            <Viewbox Stretch="{TemplateBinding Stretch}"
                     StretchDirection="Both">
              <ctrls:HeimdallrIcon x:Name="icon"
                                   Fill="{TemplateBinding Fill}"
                                   Icon="Power" >
              </ctrls:HeimdallrIcon>
            </Viewbox>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="icon" Property="Fill" Value="#FFE5B8F4" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="icon" Property="Fill" Value="#FFFF204E" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>