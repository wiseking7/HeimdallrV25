<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls"
                    xmlns:cnvts="clr-namespace:Heimdallr.UI.Converters">

  <Style TargetType="{x:Type ctrls:HeimdallrFlatButton}" BasedOn="{StaticResource {x:Type Button}}">

    <!-- 기본 회색 -->
    <Setter Property="Background" Value="#FF6EACDA" />

    <!-- 기본 텍스트 색상 -->
    <Setter Property="Foreground" Value="#FFFFFFFF" />
    <!-- 흰색 텍스트 -->

    <!-- 기본 폰트 크기 -->
    <Setter Property="FontSize" Value="16" />

    <!-- 기본 버튼 크기 설정 -->
    <Setter Property="Width" Value="120" />
    <Setter Property="Height" Value="40" />
    <Setter Property="Margin" Value="5" />

    <!-- IsMouseOver, IsPressed, IsFocused 기본 색상지정-->
    <Setter Property="MouseOverBackground" Value="{DynamicResource DarkBlue}" />
    <Setter Property="MouseOverBorderBrush" Value="#FF0A2F50" />
    <Setter Property="PressedBackground" Value="#FFC147E9" />
    <Setter Property="PressedBorderBrush" Value="#FFC747E9" />
    <Setter Property="FocusedBorderBrush" Value="#3F3B6C" />
    <Setter Property="FocusedBorderThickness" Value="2" />
    <Setter Property="DisabledBackground" Value="#FFB9B4C7" />
    <Setter Property="DisabledBorderBrush" Value="#FFB9B4C7" />
    <Setter Property="DisabledForeground" Value="#FFEB3678" />

    <!-- 마우스 커서 -->
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="1" />

    <!-- ControlTemplate: 버튼의 시각적 모양 -->
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:HeimdallrFlatButton}">
          <Border x:Name="border"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="{TemplateBinding Padding}"
                  UseLayoutRounding="True"
                  SnapsToDevicePixels="True"
                  CornerRadius="{TemplateBinding CornerRadius}">

            <!-- ContentPresenter: 버튼의 내용(텍스트, 아이콘 등) 표시 -->
            <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RecognizesAccessKey="True"/>
          </Border>

          <!-- 트리거 선언 상태별 -->
          <ControlTemplate.Triggers>

            <!-- 마우스 오버 시 배경 및 테두리 변경 -->
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="border" Property="Background" 
                  Value="{Binding MouseOverBackground, RelativeSource={RelativeSource TemplatedParent}}"/>
              <Setter TargetName="border" Property="BorderBrush"
                  Value="{Binding MouseOverBorderBrush, RelativeSource={RelativeSource TemplatedParent}}"/>
            </Trigger>

            <!-- 클릭 시 배경 및 테두리 변경 -->
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="border" Property="Background"
                  Value="{Binding PressedBackground, RelativeSource={RelativeSource TemplatedParent}}"/>
              <Setter TargetName="border" Property="BorderBrush"
                  Value="{Binding PressedBorderBrush, RelativeSource={RelativeSource TemplatedParent}}"/>
            </Trigger>

            <!-- 포커스 시 테두리 강조 -->
            <Trigger Property="IsFocused" Value="True">
              <Setter TargetName="border" Property="BorderBrush"
                  Value="{Binding FocusedBorderBrush, RelativeSource={RelativeSource TemplatedParent}}"/>
              <Setter TargetName="border" Property="BorderThickness"
                  Value="{Binding FocusedBorderThickness, RelativeSource={RelativeSource TemplatedParent}}"/>
            </Trigger>

            <!-- 비활성화 상태 배경색 및 테두리 고정 -->
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="border" Property="Background" Value="{Binding DisabledBackground, RelativeSource={RelativeSource TemplatedParent}, FallbackValue=#FFAAAAAA}"/>
              <Setter TargetName="border" Property="BorderBrush" Value="{Binding DisabledBorderBrush, RelativeSource={RelativeSource TemplatedParent}, FallbackValue=#FF888888}"/>
              <Setter Property="Foreground" Value="{Binding DisabledForeground, RelativeSource={RelativeSource TemplatedParent}, FallbackValue=#FF666666}"/>
            </Trigger>

          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>