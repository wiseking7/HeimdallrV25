<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- 배경 -->
  <SolidColorBrush x:Key="BackgroundColor" Color="#FFF5F5F5"/>

  <!-- 기본 글자 -->
  <SolidColorBrush x:Key="FontColor" Color="#333333"/>

  <!-- 테두리 -->
  <SolidColorBrush x:Key="BorderColor" Color="#FFCCCCCC"/>

  <!-- 선택 영역 배경 -->
  <SolidColorBrush x:Key="SelectedBrush" Color="#FFD6EAF8"/>

  <!-- 선택 영역 글자 -->
  <SolidColorBrush x:Key="SelectedFontBrush" Color="#333333"/>

  <!-- 슬라이더 등 강조용 -->
  <SolidColorBrush x:Key="SliderBrush" Color="#FF4DA6FF"/>

</ResourceDictionary>