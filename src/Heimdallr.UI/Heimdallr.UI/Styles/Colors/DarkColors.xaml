<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- 배경 -->
  <SolidColorBrush x:Key="BackgroundColor" Color="#2E2E2E"/>
  
  <!-- 글자 -->
  <SolidColorBrush x:Key="FontColor" Color="#E0E0E0"/>
  
  <!-- 테두리 -->
  <SolidColorBrush x:Key="BorderColor" Color="#66FFC0CB"/>
  
  <!-- 선택 영역 -->
  <SolidColorBrush x:Key="SelectedBrush" Color="#8800CED1"/>
  <SolidColorBrush x:Key="SelectedFontBrush" Color="#FFFFFF"/>
  
  <!-- ProgressBar 강조 색상 -->
  <SolidColorBrush x:Key="SliderBrush" Color="#99336699"/>
</ResourceDictionary>