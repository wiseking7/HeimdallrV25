<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls">

  <!-- HeimdallrSlider 스타일 -->
  <Style TargetType="{x:Type ctrls:HeimdallrSlider}">
    <Setter Property="Width" Value="120" />
    <Setter Property="Height" Value="36" />
    <Setter Property="IconFill" Value="Gold" />
    <Setter Property="ThumbHoverFill" Value="#FFA53860" />
    <Setter Property="ThumbDragFill" Value="#FFEF88AD" />
    <Setter Property="IconSize" Value="30" />
    <Setter Property="ThumbIcon" Value="ArrowLeftRight" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="TrackBackground" Value="Transparent" />
    <Setter Property="RangeLeftFill" Value="#FF3B9797" />
    <Setter Property="RangeRightFill" Value="#FFD2C1B6" />
    <Setter Property="IsMoveToPointEnabled" Value="True" />
    
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:HeimdallrSlider}">
          <Grid Background="{TemplateBinding TrackBackground}">
            <Grid Height="4" Margin="12 0 12 0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Name="LeftColumn" Width="*" />
                <!-- Thumb -->
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Name="RightColumn" Width="*" />
              </Grid.ColumnDefinitions>
              <Border Grid.Column="0" Background="{TemplateBinding RangeLeftFill}" />
              <Border Grid.Column="2" Background="{TemplateBinding RangeRightFill}"/>
            </Grid>

            <Track x:Name="PART_Track">
              <Track.Thumb>
                <!-- 아이콘 크기 -->
                <Thumb Grid.Column="1" Width="40" Height="40" Margin="0 -7 0 0">
                  <Thumb.Template>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                      <Grid>
                        <ctrls:HeimdallrIcon
                                x:Name="IconPath"
                                IconSize="{Binding IconSize, RelativeSource={RelativeSource AncestorType=ctrls:HeimdallrSlider}}"
                                Icon="{Binding ThumbIcon, RelativeSource={RelativeSource AncestorType=ctrls:HeimdallrSlider}}"
                                Fill="{Binding IconFill, RelativeSource={RelativeSource AncestorType=ctrls:HeimdallrSlider}}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                      </Grid>
                      <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                          <Setter TargetName="IconPath" Property="Fill"
                                  Value="{Binding ThumbHoverFill, RelativeSource={RelativeSource AncestorType=ctrls:HeimdallrSlider}}" />
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                          <Setter TargetName="IconPath" Property="Fill"
                                  Value="{Binding ThumbDragFill, RelativeSource={RelativeSource AncestorType=ctrls:HeimdallrSlider}}" />
                        </Trigger>
                      </ControlTemplate.Triggers>
                    </ControlTemplate>
                  </Thumb.Template>
                </Thumb>
              </Track.Thumb>
            </Track>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>