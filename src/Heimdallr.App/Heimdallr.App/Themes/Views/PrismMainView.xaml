<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:Heimdallr.App.Themes.UI"
                    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls;assembly=Heimdallr.UI"
                    xmlns:convt="clr-namespace:Heimdallr.UI.Converters;assembly=Heimdallr.UI">

  <Style TargetType="{x:Type ui:PrismMainView}"
         BasedOn="{StaticResource {x:Type ctrls:BaseThemeWindow}}">

    <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}" />

    <Setter Property="TitleHeaderBackground" Value="{DynamicResource TitleHeaderBackground}" />
    <Setter Property="TitleContent">
      <Setter.Value>
        <StackPanel Orientation="Horizontal">
          <ctrls:HeimdallrFlatButton x:Name="FlatButton" Content="설정" Margin="5,0" CornerRadius="7" Background="Transparent">
            <ctrls:HeimdallrFlatButton.ContextMenu>
              <ctrls:HeimdallrContextMenu >

                <ctrls:HeimdallrMenuItem
                                          Header="일반 설정"
                                          Icon="Setting"
                                          IconFill="#FFFFFFFF"
                                          Command="{Binding MessageCommand}" />

                <ctrls:HeimdallrMenuItem
                                          Header="고급 설정"
                                          Icon="Broadcast"
                                          IconFill="#FFFFFFFF"
                                          Command="{Binding MessageCommand}"
                                          CommandParameter="Advanced" />

                <ctrls:HeimdallrMenuItem Header="비활성 메뉴"
                                         IconFill="#FFFFFFFF"
                                         Icon="Lock"
                                         IsEnabled="False"
                                         Command="{Binding MessageCommand}"/>
              </ctrls:HeimdallrContextMenu>
            </ctrls:HeimdallrFlatButton.ContextMenu>
          </ctrls:HeimdallrFlatButton>

          <ctrls:HeimdallrFlatButton x:Name="DimmingButton" Content="다이밍설정" Margin="5,0" CornerRadius="7" Background="Transparent">
            <ctrls:HeimdallrFlatButton.ContextMenu>
              <ctrls:HeimdallrContextMenu >
                <!-- 다이밍 색상 선택 메뉴 -->
                <ctrls:HeimdallrMenuItem Header="다크" Icon="Setting" IconFill="#FF000000"
                                     Command="{Binding ChangeDimmingColorCommand}"
                                     CommandParameter="#FF141414"/>
                <ctrls:HeimdallrMenuItem Header="라이트" Icon="Broadcast" IconFill="#FFFFFFFF"
                                     Command="{Binding ChangeDimmingColorCommand}"
                                     CommandParameter="#FFF5F5F5"/>
                <ctrls:HeimdallrMenuItem Header="커스텀" Icon="Lock" IconFill="#FFFFA500"
                                     Command="{Binding ChangeDimmingColorCommand}"
                                     CommandParameter="#FFFFA500"/>

                <!-- 다이밍 ON/OFF 토글 -->
                <Separator/>
                <ctrls:HeimdallrMenuItem Header="다이밍 토글"
                                     Icon="Power"
                                     IconFill="#FFFFFFFF"
                                     Command="{Binding ToggleDimmingCommand}"/>
              </ctrls:HeimdallrContextMenu>
            </ctrls:HeimdallrFlatButton.ContextMenu>
          </ctrls:HeimdallrFlatButton>

          <!-- 테마 설정 버튼 -->
          <ctrls:HeimdallrFlatButton x:Name="ThemeButton" Content="테마설정" Margin="5,0" CornerRadius="7" Background="Transparent">
            <ctrls:HeimdallrFlatButton.ContextMenu>
              <ctrls:HeimdallrContextMenu>
                <ctrls:HeimdallrMenuItem Header="라이트 테마" Icon="Date" IconFill="#FFFFA500"
                                 Command="{Binding ChangeThemeCommand}" CommandParameter="Light"/>
                <ctrls:HeimdallrMenuItem Header="다크 테마" Icon="Magnify" IconFill="#FF555555"
                                 Command="{Binding ChangeThemeCommand}" CommandParameter="Dark"/>
              </ctrls:HeimdallrContextMenu>
            </ctrls:HeimdallrFlatButton.ContextMenu>
          </ctrls:HeimdallrFlatButton>

          <!-- 글자색 바인딩 -->
          <TextBlock Text="Hello, Theme!" 
                     Foreground="{DynamicResource FontColor}" 
                      FontSize="18" Margin="0,0,0,10"/>

          <!-- ProgressBar 바인딩 -->
          <ProgressBar Minimum="0" Maximum="100" Value="50" 
                 Height="20" Width="200"
                 Background="{DynamicResource BackgroundColor}"
                 Foreground="{DynamicResource SliderBrush}"/>

        </StackPanel>
      </Setter.Value>
    </Setter>
    
    <Setter Property="Content">
      <Setter.Value>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="*" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
              <RowDefinition Height="*" />
              <RowDefinition Height="*" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- HeimdallrIcon-->
            <Grid Grid.Row="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <ctrls:HeimdallrIcon Grid.Column="0" Icon="Sale" IconSize="50"  Fill="Chartreuse"/>
              <ctrls:HeimdallrIcon Grid.Column="1" IconSize="100" Image="HanJimin" />
            </Grid>

            <Grid Grid.Row="2">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--0 -->
                <ColumnDefinition Width="Auto" />
                <!--1 -->
                <ColumnDefinition Width="Auto" />
                <!--2 -->
                <ColumnDefinition Width="Auto" />
                <!--3 -->
                <ColumnDefinition Width="Auto" />
                <!--4 -->
                <ColumnDefinition Width="Auto" />
                <!--5 -->
                <ColumnDefinition Width="Auto" />
                <!--6 -->
                <ColumnDefinition Width="Auto" />
                <!--7 -->
                <ColumnDefinition Width="Auto" />
                <!--8 -->
                <ColumnDefinition Width="Auto" />
                <!--9 -->
                <ColumnDefinition Width="Auto" />
                <!--10 -->
                <ColumnDefinition Width="Auto" />
                <!--11 -->
                <ColumnDefinition Width="Auto" />
                <!--12 -->
                <ColumnDefinition Width="Auto" />
                <!--13 -->
                <ColumnDefinition Width="Auto" />
                <!--14 -->
                <ColumnDefinition Width="Auto" />
                <!--15 -->
                <ColumnDefinition Width="Auto" />
                <!--16 -->
                <ColumnDefinition Width="Auto" />
                <!--17 -->
                <ColumnDefinition Width="Auto" />
                <!--18 -->
                <ColumnDefinition Width="Auto" />
                <!--19 -->
                <ColumnDefinition Width="*"    />
   
              </Grid.ColumnDefinitions>
              <ctrls:HeimdallrCloseButton Grid.Column="0" IconSize="25" Fill="AliceBlue"
                                          Command="{Binding MessageCommand}"/>
              <ctrls:HeimdallrMaximizeButton Grid.Column="1" IconSize="25" Fill="Aqua"
                                          Command="{Binding MessageCommand}"/>
              <ctrls:HeimdallrMinimizeButton Grid.Column="2" IconSize="25"  Fill="Chocolate"
                                          Command="{Binding MessageCommand}"/>
              <ctrls:HeimdallrHoldSubmitButton Grid.Column="3" Content="HoldSubmit" BorderThickness="2"
                                          Command="{Binding MessageCommand}"/>
              <ctrls:HeimdallrFlatButton Grid.Column="4"  Content="FlatButton" 
                                         Command="{Binding MessageCommand}" CornerRadius="7"/>
              <ctrls:HeimdallrPulseEllipseButton Grid.Column="5" Icon="Arrow_Triangle_Right" Content="PulesEllipseButon"
                                                 Command="{Binding MessageCommand}" />
              <ctrls:HeimdallrPulseButton Grid.Column="6" Icon="AcitveA" Background="#FF50577A"
                                          ButtonText="PulseButton Rset"  Width="120"
                                          Command="{Binding ResetCommand}" CornerRadius="7" />
              <ctrls:HeimdallrHoldButton Grid.Column="7" Icon="AcitveA" ButtonText="Start HeimdallrProgressBar"
                                             BackgroundRectangleFill="Beige" HoldDuration="0:0:1" AnimatedFillDuration="0:0:0.1"
                                             Command="{Binding StartCommand}"/>
              <ctrls:HeimdallrSwitchCheckBox Grid.Column="8" Icon="Ghost1" Width="120" 
                                             OnLabel="ON할아버지" OffLabel="OFF할아버지" OnLebelForeground="#FFFFFFFF"
                                             OffLebelForeground="#FF8C3061"/>
              <ctrls:HeimdallrIconToggleButton Grid.Column="9" Icon="Success_Flag"  IconMouseOverFill="Firebrick"/>
              <ctrls:HeimdallrComboBox Grid.Column="10" Icon="Success" IconMouseOverFill="AliceBlue"
                                       PlaceholderText="역할" PlaceholderForeground="AliceBlue" 
                                       SelectedItemForeground="#FFF25912"
                                       ItemsSource="{Binding EmployeePosition}"
                                       SelectedValue="{Binding SelectedEmployeePosition, Mode=TwoWay}"
                                       SelectedValuePath="Value"
                                       DisplayMemberPath="Description"/>
              <!-- 선택된 아이템 표시 -->
              <TextBlock Grid.Column="11"
                 Margin="10,0,0,0"
                 VerticalAlignment="Center"
                 FontSize="16"
                 Foreground="Black"
                 Text="{Binding SelectedEmployeePosition}"/>

              <ctrls:HeimdallrRepeatButton Grid.Column="12" Background="Aqua" Width="100" Height="35" 
                                BorderBrush="Black" BorderThickness="2" Content="리피트버튼"/>

              <ctrls:HeimdallrPlaceholderTextBox Grid.Column="13" 
                                                 MaxLength="10"
                                                 Icon="AcitveB"
                                                 BorderBrush="AliceBlue"
                                                 Foreground="#FFFFFFFF"
                                                 UseFloatingLabel="True"
                                                 PlaceholderText="이름을 입력하세요"
                                                 PlaceholderForeground="AliceBlue"
                                                 RightIcon="AcitveB"
                                                 RightIconFill="Azure"
                                                 RightCommand="{Binding MessageCommand}"
                                                 RightIconToolTipContent="자동코드생성"
                                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

              <ctrls:HeimdallrRadioButton Grid.Column="14" Icon="WindowMaximize" IconFill="AliceBlue" 
                                          MouseOverForeground="AliceBlue" />

              <ctrls:HeimdallrProgressBar Grid.Column="15" Value="{Binding Value}" Maximum="{Binding Maximum}"  Width="100"
                                          Minimum="{Binding Minimum}"  Background="{DynamicResource DarkPlum}"/>

            </Grid>
            <Grid Grid.Row="3" >
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--0 -->
                <ColumnDefinition Width="Auto" />
                <!--1 -->
                <ColumnDefinition Width="Auto" />
                <!--2 -->
                <ColumnDefinition Width="Auto" />
                <!--3 -->
                <ColumnDefinition Width="Auto" />
                <!--4 -->
                <ColumnDefinition Width="Auto" />
                <!--5 -->
                <ColumnDefinition Width="Auto" />
                <!--6 -->
                <ColumnDefinition Width="Auto" />
                <!--7 -->
                <ColumnDefinition Width="Auto" />
                <!--8 -->
                <ColumnDefinition Width="Auto" />
                <!--9 -->
                <ColumnDefinition Width="Auto" />
                <!--10 -->
                <ColumnDefinition Width="Auto" />
                <!--11 -->
                <ColumnDefinition Width="Auto" />
                <!--12 -->
                <ColumnDefinition Width="Auto" />
                <!--13 -->
                <ColumnDefinition Width="Auto" />
                <!--14 -->
                <ColumnDefinition Width="*"    />
                <!--13 -->
              </Grid.ColumnDefinitions>

              <ctrls:HeimdallrRepeatButton Grid.Column="0" Background="Aqua" Width="30" Height="30" 
                        BorderBrush="Black" BorderThickness="0"
                        Icon="AcitveB" IconFill="BlanchedAlmond" CornerRadius="7"/>

              <ctrls:HeimdallrThumb Grid.Column="1" Margin="10 0 0 0" Background="Red" Width="120" Height="30"
                         MouseOverBrush="Blue" IsDraggingBrush="GreenYellow"/>

              <ctrls:HeimdallrScrollBar Grid.Column="2" Margin="10 0 0 0" />
            </Grid>

            <ctrls:FlipAnimationCard Grid.Row="3" Image="WangchuranA" Icon="Account" CardWidth="50" CardHeight="50" />

            <Grid Grid.Row="0" >
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <ctrls:LoadingOverlay Grid.Column="0" IndicatorType="Blocks" Foreground="White"
                                      IsLoading="{Binding IsLoading}"  
                                      Visibility="{Binding IsLoading, Converter={convt:BooleanToVisibilityConverter}}"/>

              <ctrls:HeimdallrFlatButton Grid.Column="1" Content="Loading Button" Command="{Binding ToggleBusyCommand}" />
            </Grid>

            <!--#region AnimatedContentMenu Row 0-->
            <!--<Grid Grid.Row="0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>

              --><!-- 열기/닫기 버튼 --><!--
              <Button Grid.Row="2" Grid.Column="0"
                      Content="Toggle Menu"
                      Width="100" Height="30"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="10"
                      Command="{Binding ToggleMenuCommand}" />

              <ctrls:AnimatedContentMenu 
                                        Grid.Row="0"
                                        IsOpen="{Binding MenuVisible}"
                                        SlideDirection="Left"
                                        OverlayMode="Push"
                                        Background="#FF456882"
                                        Padding="5"
                                        HorizontalAlignment="Right"
                                        EasingMode="BackEaseIn"
                                        OpenCloseDuration="0:0:1">

                <ctrls:AnimatedContentMenu.Content>
