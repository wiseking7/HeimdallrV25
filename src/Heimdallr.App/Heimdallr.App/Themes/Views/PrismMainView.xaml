                              </ItemsControl.ItemTemplate>
                            </ItemsControl>
                          </StackPanel>
                        </DataTemplate>
                      </ListBox.ItemTemplate>
                    </ListBox>

                    <ctrls:HeimdallrHoldIconButton  Icon="Account" Grid.Row="1" Content="sdfsdfsf" />
                    <ctrls:HeimdallrRadioButton Grid.Row="2" Icon="Address" IconFill="AliceBlue" 
                                     
