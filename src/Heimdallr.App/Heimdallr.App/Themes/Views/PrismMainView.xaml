<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:Heimdallr.App.Themes.UI"
                    xmlns:ctrls="clr-namespace:Heimdallr.UI.Controls;assembly=Heimdallr.UI"
                    xmlns:convt="clr-namespace:Heimdallr.UI.Converters;assembly=Heimdallr.UI"
                    xmlns:he="clr-namespace:Heimdallr.UI.Helpers;assembly=Heimdallr.UI"
                    xmlns:exten="clr-namespace:Heimdallr.UI.Extensions;assembly=Heimdallr.UI">

  <!--#region ListView 컨텍스트 메뉴(비밀번호 변경, 복원, 삭제) -->
  <ctrls:HeimdallrContextMenu x:Key="ContextMenu" DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}"
                              BackgroundColor="AliceBlue">
    <!--#region 비밀번호 변경 컨텍스트 메뉴 -->
    <ctrls:HeimdallrMenuItem
                            Margin="10,5"
                            Command="{Binding MessageCommand}"
                            CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                            IconFill="#FFFDCFFA"
                            FontSize="16"
                            Header="비밀번호변경"
                            IconSize="15"
                            Icon="Exchange" 
                            ToolTip="비밀번호변경"/>
    <!--#endregion-->

    <!--#region 복원 컨텍스트 메뉴 (IsActive(bool), IsLocked(bool), FailedLoginAttempts(int)-->
    <ctrls:HeimdallrMenuItem
    Margin="10,5"
    Command="{Binding MessageCommand}"
    CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
    IconFill="#FF739EC9"
    FontSize="16"
    Header="복원"
    IconSize="15"
    Icon="AccountA" 
    ToolTip="복원"/>
    <!--#endregion -->

    <!--#region 삭제 -->
    <ctrls:HeimdallrMenuItem
    Margin="10,5"
    Command="{Binding MessageCommand}"
    CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
    FontSize="16"
    Header="삭제"
    IconSize="15"
    Icon="Delete" 
    ToolTip="삭제" />
    <!--#endregion-->
  </ctrls:HeimdallrContextMenu>
  <!--#endregion-->


  <Style TargetType="{x:Type ui:PrismMainView}"
         BasedOn="{StaticResource {x:Type ctrls:BaseThemeWindow}}">

    <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}" />

    <Setter Property="HeaderBackground" Value="{DynamicResource TitleHeaderBackground}" />
    <Setter Property="HeaderContent">
      <Setter.Value>
        <StackPanel Orientation="Horizontal">
          <ctrls:HeimdallrFlatButton x:Name="FlatButton" Content="설정" Margin="5,0" CornerRadius="7" Background="Transparent"
                                     ToolTip="설정">
            <ctrls:HeimdallrFlatButton.ContextMenu>
              <ctrls:HeimdallrContextMenu >

                <ctrls:HeimdallrMenuItem
                                          Header="일반 설정"
                                          Icon="Setting"
                                          IconFill="#FFFFFFFF"
                                          Command="{Binding MessageCommand}" 
                                          ToolTip="일반설정"/>

                <ctrls:HeimdallrMenuItem
                                          Header="다이얼로그 데스트 열기 "
                                          Icon="Broadcast"
                                          IconFill="#FFFFFFFF"
                                          Command="{Binding OpenDialogCommand}"
                                          CommandParameter="Advanced" 
                                          ToolTip="다이얼로그 테스트 열기"/>

                <ctrls:HeimdallrMenuItem Header="비활성 메뉴"
                                         IconFill="#FFFFFFFF"
                                         Icon="Lock"
                                         IsEnabled="False"
                                         Command="{Binding MessageCommand}"
                                         ToolTip="비횔성 메뉴"/>
              </ctrls:HeimdallrContextMenu>
            </ctrls:HeimdallrFlatButton.ContextMenu>
          </ctrls:HeimdallrFlatButton>

          <ctrls:HeimdallrFlatButton x:Name="DimmingButton" Content="다이밍설정" Margin="5,0" CornerRadius="7" Background="Transparent"
                                     ToolTip="다이밍설정">
            <ctrls:HeimdallrFlatButton.ContextMenu>
              <ctrls:HeimdallrContextMenu >
                <!-- 다이밍 색상 선택 메뉴 -->
                <ctrls:HeimdallrMenuItem Header="다크" Icon="Setting" IconFill="#FF000000"
                                     Command="{Binding ChangeDimmingColorCommand}"
                                     CommandParameter="#FF141414" ToolTip="다크입니다"/>
                <ctrls:HeimdallrMenuItem Header="라이트" Icon="Broadcast" IconFill="#FFFFFFFF"
                                     Command="{Binding ChangeDimmingColorCommand}"
                                     CommandParameter="#FFF5F5F5" ToolTip="라이트"/>
                <ctrls:HeimdallrMenuItem Header="커스텀" Icon="Lock" IconFill="#FFFFA500"
                                     Command="{Binding ChangeDimmingColorCommand}"
                                     CommandParameter="#FFFFA500" ToolTip="커스텀"/>

                <!-- 다이밍 ON/OFF 토글 -->
                <Separator/>
                <ctrls:HeimdallrMenuItem Header="다이밍 토글"
                                     Icon="Power"
                                     IconFill="#FFFFFFFF"
                                     ToolTip="다이밍 토글"
                                     Command="{Binding ToggleDimmingCommand}"/>
              </ctrls:HeimdallrContextMenu>
            </ctrls:HeimdallrFlatButton.ContextMenu>
          </ctrls:HeimdallrFlatButton>

          <!-- 테마 설정 버튼 -->
          <ctrls:HeimdallrFlatButton x:Name="ThemeButton" Content="테마설정" Margin="5,0" CornerRadius="7" Background="Transparent"
                                     ToolTip="테마설정">
            <ctrls:HeimdallrFlatButton.ContextMenu>
              <ctrls:HeimdallrContextMenu>
                <ctrls:HeimdallrMenuItem Header="라이트 테마" Icon="Date" IconFill="#FFFFA500"
                                         Command="{Binding ChangeThemeCommand}" CommandParameter="Light"
                                         ToolTip="라이드테마"/>
                <ctrls:HeimdallrMenuItem Header="다크 테마" Icon="Magnify" IconFill="#FF555555"
                                         Command="{Binding ChangeThemeCommand}" CommandParameter="Dark"
                                         ToolTip="다크테마"/>
              </ctrls:HeimdallrContextMenu>
            </ctrls:HeimdallrFlatButton.ContextMenu>
          </ctrls:HeimdallrFlatButton>

          <!-- 글자색 바인딩 -->
          <TextBlock Text="Hello, Theme!" 
                     Foreground="{DynamicResource FontColor}" 
                      FontSize="18" Margin="0,0,0,10"/>

          <!-- ProgressBar 바인딩 -->
          <ProgressBar Minimum="0" Maximum="100" Value="50" 
                       Height="20" Width="200"
                       Background="{DynamicResource BackgroundColor}"
                       Foreground="{DynamicResource SliderBrush}"/>

        </StackPanel>
      </Setter.Value>
    </Setter>
    
    <Setter Property="Content">
      <Setter.Value>
        <ctrls:HeimdallrScrollViewer  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="*" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
              <RowDefinition Height="*" />
              <RowDefinition Height="100" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--0 -->
                <ColumnDefinition Width="Auto" />
                <!--1 -->
                <ColumnDefinition Width="Auto" />
                <!--2 -->
                <ColumnDefinition Width="Auto" />
                <!--3 -->
                <ColumnDefinition Width="Auto" />
                <!--4 -->
                <ColumnDefinition Width="Auto" />
                <!--5 -->
                <ColumnDefinition Width="Auto" />
                <!--6 -->
                <ColumnDefinition Width="Auto" />
                <!--7 -->
                <ColumnDefinition Width="Auto" />
                <!--8 -->
                <ColumnDefinition Width="Auto" />
                <!--9 -->
                <ColumnDefinition Width="Auto" />
                <!--10 -->
                <ColumnDefinition Width="Auto" />
                <!--11 -->
                <ColumnDefinition Width="Auto" />
                <!--12 -->
                <ColumnDefinition Width="Auto" />
                <!--13 -->
                <ColumnDefinition Width="Auto" />
                <!--14 -->
                <ColumnDefinition Width="Auto" />
                <!--15 -->
                <ColumnDefinition Width="Auto" />
                <!--16 -->
                <ColumnDefinition Width="Auto" />
                <!--17 -->
                <ColumnDefinition Width="Auto" />
                <!--18 -->
                <ColumnDefinition Width="Auto" />
                <!--19 -->
                <ColumnDefinition Width="*"    />

              </Grid.ColumnDefinitions>
              <ctrls:HeimdallrCloseButton Grid.Column="0" IconSize="25" Fill="AliceBlue"
                                          Command="{Binding MessageCommand}" />
              
              <ctrls:HeimdallrMaximizeButton Grid.Column="1" IconSize="25" Fill="Aqua" Margin="10 0 0 0"
                                          Command="{Binding MessageCommand}" />
              
              <ctrls:HeimdallrMinimizeButton Grid.Column="2" IconSize="25"  Fill="Chocolate" Margin="10 0 0 0"
                                          Command="{Binding MessageCommand}" />
              
              <ctrls:HeimdallrHoldSubmitButton Grid.Column="3" Content="HoldSubmit" BorderThickness="2" Margin="10 0 0 0"
                                          Command="{Binding MessageCommand}" ToolTip="HoldSubmitButton"/>
              
              <ctrls:HeimdallrFlatButton Grid.Column="4"  Content="FlatButton" Margin="10 0 0 0"
                                         Command="{Binding MessageCommand}" CornerRadius="7" ToolTip="FlatButton"/>
              
              <ctrls:HeimdallrPulseEllipseButton Grid.Column="5" Icon="Arrow_Triangle_Right" Content="PulesEllipseButon" Margin="10 0 0 0"
                                                 ShapeMode="Circle"
                                                 Command="{Binding MessageCommand}" ToolTip="PulseEllipseButton"/>
              
              <ctrls:HeimdallrPulseButton Grid.Column="6" Icon="AcitveA" Background="#FF50577A" Margin="10 0 0 0"
                                          ButtonText="PulseButton Rset"  Width="120"
                                          Command="{Binding ResetCommand}" CornerRadius="7" ToolTip="PulseButton"/>
              
              <ctrls:HeimdallrHoldButton Grid.Column="7" Icon="AcitveA" ButtonText="Start HeimdallrProgressBar" Margin="10 0 0 0"
                                             BackgroundRectangleFill="Beige" HoldDuration="0:0:1" AnimatedFillDuration="0:0:0.1"
                                             Command="{Binding StartCommand}" ToolTip="HoldButton"/>
              
              <ctrls:HeimdallrSwitchCheckBox Grid.Column="8" Icon="Ghost1" Width="120" Margin="10 0 0 0"
                                             OnLabel="ON할아버지" OffLabel="OFF할아버지" OnLebelForeground="#FFFFFFFF"
                                             OffLebelForeground="#FF8C3061" IsChecked="{Binding IsLoading, Mode=TwoWay}"
                                             ToolTip="SwitchCheckBox"/>
              
              <ctrls:HeimdallrIconToggleButton Grid.Column="9" Icon="Success_Flag"  IconMouseOverFill="#FFFFCC00" Margin="10 0 0 0"
                                               IsChecked="{Binding IsLoading, Mode=TwoWay}"
                                               ToolTip="IconToggleButton"/>
              
              <ctrls:HeimdallrComboBox Grid.Column="10" Icon="Success" IconMouseOverFill="AliceBlue" Margin="10 0 0 0"
                                       PlaceholderText="역할" PlaceholderForeground="AliceBlue" 
                                       SelectedItemForeground="#FFF25912"
                                       ItemsSource="{Binding EmployeePosition}"
                                       SelectedValue="{Binding SelectedEmployeePosition, Mode=TwoWay}"
                                       SelectedValuePath="Value"
                                       DisplayMemberPath="Description"
                                       ToolTip="ComboBox"/>
              
              <!-- 선택된 아이템 표시 -->
              <TextBlock Grid.Column="11"  Margin="10,0,0,0" VerticalAlignment="Center" FontSize="16" Foreground="White"
                         Text="{Binding SelectedEmployeePosition}"/>

              <ctrls:HeimdallrRepeatButton Grid.Column="12" Background="Aqua" Width="100" Height="36" Margin="10 0 0 0"
                                           BorderBrush="Black" BorderThickness="2" Content="리피트버튼"
                                           ToolTip="RepeatButton"/>

              <ctrls:HeimdallrPlaceholderTextBox Grid.Column="13" Margin="10 0 0 0"
                                                 MaxLength="10"
                                                 Icon="AcitveB"
                                                 BorderBrush="AliceBlue"
                                                 Foreground="#FFFFFFFF"
                                                 UseFloatingLabel="True"
                                                 PlaceholderText="이름을 입력하세요"
                                                 PlaceholderForeground="AliceBlue"
                                                 RightIcon="AcitveB"
                                                 RightIconFill="Azure"
                                                 RightCommand="{Binding MessageCommand}"
                                                 RightIconToolTip="자동코드생성"
                                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                 ToolTip="PlaceHolderTextBox"/>

              <ctrls:HeimdallrRadioButton Grid.Column="14" Icon="WindowMaximize" IconFill="#FFD2C1B6"  Margin="10 0 0 0"
                                          Command="{Binding MessageCommand}" 
                                          ToolTip="RADIOBUTTON"/>

              <ctrls:HeimdallrProgressBar Grid.Column="15" Value="{Binding Value}" Maximum="{Binding Maximum}"  Width="100" Margin="10 0 0 0"
                                          Minimum="{Binding Minimum}" Background="{DynamicResource DarkPlum}"
                                          ToolTip="PregressBar" />

            </Grid>
            <Grid Grid.Row="2" >
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--0 -->
                <ColumnDefinition Width="Auto" />
                <!--1 -->
                <ColumnDefinition Width="Auto" />
                <!--2 -->
                <ColumnDefinition Width="Auto" />
                <!--3 -->
                <ColumnDefinition Width="Auto" />
                <!--4 -->
                <ColumnDefinition Width="Auto" />
                <!--5 -->
                <ColumnDefinition Width="Auto" />
                <!--6 -->
                <ColumnDefinition Width="Auto" />
                <!--7 -->
                <ColumnDefinition Width="Auto" />
                <!--8 -->
                <ColumnDefinition Width="Auto" />
                <!--9 -->
                <ColumnDefinition Width="Auto" />
                <!--10 -->
                <ColumnDefinition Width="Auto" />
                <!--11 -->
                <ColumnDefinition Width="Auto" />
                <!--12 -->
                <ColumnDefinition Width="Auto" />
                <!--13 -->
                <ColumnDefinition Width="Auto" />
                <!--14 -->
                <ColumnDefinition Width="*"    />
                <!--13 -->
              </Grid.ColumnDefinitions>

              <ctrls:HeimdallrRepeatButton Grid.Column="0" Background="Aqua" Margin="10 0 0 0"
                                           BorderBrush="Black" BorderThickness="0"
                                           Icon="AcitveB" IconFill="BlanchedAlmond" CornerRadius="7"
                                           ToolTip="리피트버튼"/>

              <ctrls:HeimdallrThumb Grid.Column="1" Margin="10 0 0 0" Background="Red"
                                    MouseOverBrush="Blue" IsDraggingBrush="GreenYellow"
                                    ToolTip="Thumb"/>


              <ctrls:HeimdallrPlaceholderTextBox Grid.Column="2" MaxLength="10" Icon="Facebook" BorderBrush="AliceBlue"
                                                 Foreground="#FFFFFFFF" UseFloatingLabel="True" PlaceholderText="입력하세요"
                                                 PlaceholderForeground="AliceBlue" RightIcon="AcitveB"
                                                 RightIconFill="Azure" Margin="10 0 0 0"
                                                 RightIconToolTip="테스트" ToolTip="PlaceHolderTextbox"/>

              <ctrls:HeimdallrHoldButton Grid.Column="3" Icon="Save" ButtonText="OK" BackgroundRectangleFill="Beige" 
                                         HoldDuration="0:0:1" AnimatedFillDuration="0:0:0.1" Margin="10 0 0 0" 
                                         ToolTip="HoldButton"/>

              <ctrls:HeimdallrNumericButton Grid.Column="4" Margin="10 0 0 0" Max="1000" Min="-50" Step="50" UpButtonIcon="Arrow_Ellipse_UpA" DownButtonIcon="Arrow_Ellipse_DownA"
                                            ToolTip="NumericButton"/>

              <ctrls:HeimdallrIcon Grid.Column="5" Icon="Sale" IconSize="50"  Fill="Chartreuse" Margin="10 0 0 0"
                                   Command="{Binding MessageCommand}" ToolTip="HeimdallrIcon"/>
            </Grid>

            <Grid Grid.Row="0" >
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <ctrls:LoadingOverlay Grid.Column="0" IndicatorType="Blocks" Foreground="White"
                                    IsLoading="{Binding IsLoading}"  ToolTip="LoadingOverlay"
                                    Visibility="{Binding IsLoading, Converter={convt:BooleanToVisibilityConverter}}"/>

              <ctrls:HeimdallrRadioButton Grid.Column="1" Icon="Cash" Command="{Binding ToggleBusyCommand}" ToolTip="RadioButton"/>

              <ctrls:FlipAnimationCard Grid.Column="2" Image="AmazonPrime" CardWidth="200" CardHeight="200" ToolTip="CARD">
                <ctrls:FlipAnimationCard.BackContent>
                  <ctrls:HeimdallrFlatButton />
                </ctrls:FlipAnimationCard.BackContent>
              </ctrls:FlipAnimationCard>

              <StackPanel Grid.Row="3" Orientation="Horizontal">
                <ctrls:HeimdallrIcon IconSize="100" Icon="Customer" ToolTip="ArrowUpBold"/>
                <ctrls:HeimdallrIcon IconSize="100" Icon="User" ToolTip="ArrowDownBold"/>
              </StackPanel>

              <ctrls:HeimdallrScrollBar Orientation="Horizontal" Grid.Column="4" Margin="10 0 0 0" Width="200" Height="20"
                                        ToolTip="ScrollBar"
                                        />

              <ctrls:HeimdallrScrollBar Orientation="Vertical" Grid.Column="5" Margin="10 0 0 0" Height="100"
                                        ToolTip="ScrollBar"
                                        />

              <ctrls:HeimdallrTreeView Grid.Column="6" Width="200" Background="Transparent" ToolTip="TreeView">
                <ctrls:HeimdallrTreeViewItem Icon="Approval" ToolTip="TreeViewItem"
                                             ExpandIcon="Arrow_Triangle_Down"
                                             CollapseIcon="Arrow_Triangle_Up"
                                             SelectedBackground="AliceBlue"
                                             ExpandToggleIconSize="15"
                                             FontSize="10" Foreground="Red">

                  <ctrls:HeimdallrTreeViewItem Text="등록" Icon="Create"
                                               ExpandIcon="Arrow_Triangle_Down"
                                               CollapseIcon="Arrow_Triangle_Up"
                                               IconSize="20"
                                               ExpandIconFill="AliceBlue"
                                               ExpandToggleIconSize="10"
                                               CollapseIconFill="Bisque"
                                               SelectedCommand="{Binding MessageCommand}"
                                               CommandParameter="없음">

                    <!-- 하위 아이템: 세부정보 -->
                    <ctrls:HeimdallrTreeViewItem Text="세부정보" Icon="Create" 
                                                 IconSize="16"
                                                 IconFill="AliceBlue"
                                                 Foreground="Green"

                                                 SelectedCommand="{Binding MessageCommand}"
                                                 CommandParameter="없음"/>

                    <!-- 또 다른 하위 아이템 -->
                    <ctrls:HeimdallrTreeViewItem Text="추가정보" Icon="Create"
                                                 IconSize="16"
                                                 IconFill="LightGreen"
                                                 Foreground="Blue"

                                                 SelectedCommand="{Binding MessageCommand}"
                                                 CommandParameter="없음"/>
                  </ctrls:HeimdallrTreeViewItem>
                </ctrls:HeimdallrTreeViewItem>
              </ctrls:HeimdallrTreeView>

              <ctrls:HeimdallrListView Grid.Column="7" 
                                       ColumnHeaderHeight="36"
                                       ColumnHeaderBackground="#FF018790"
                                       ContextMenu="{StaticResource ContextMenu}"
                                       ColumnHeaderFontSize="20"
                                       ColumnHeaderFontWeight="SemiBold"
                                       ColumnHeaderForeground="#FF9B5DE0"
                                       ItemsSource="{Binding ListViewTest}"
                                       SelectedBackground="#FF87BAC3"
                                       MouseOverBackground="#334155"
                                       Background="Transparent"
                                       ScrollViewer.VerticalScrollBarVisibility="Auto">



                <ctrls:HeimdallrListView.View>
                  <GridView >

                    <GridViewColumn Header="이름" Width="150" exten:GridViewColumnExtensions.SortMemberPath="Name">
                      <GridViewColumn.CellTemplate>
                        <DataTemplate>
                          <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                      </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="나이" Width="100" exten:GridViewColumnExtensions.SortMemberPath="Age">
                      <GridViewColumn.CellTemplate>
                        <DataTemplate>
                          <TextBlock Text="{Binding Age}" />
                        </DataTemplate>
                      </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn Header="부서" Width="150" exten:GridViewColumnExtensions.SortMemberPath="Department">
                      <GridViewColumn.CellTemplate>
                        <DataTemplate>
                          <TextBlock Text="{Binding Department}"/>
                        </DataTemplate>
                      </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                  </GridView>
                </ctrls:HeimdallrListView.View>

              </ctrls:HeimdallrListView>
            </Grid>

            <Grid Grid.Row="3">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <StackPanel Grid.Column="0" Margin="10 0 0 0" Orientation="Horizontal" >
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="200" Height="36"/>
                <ItemsControl ItemsSource="{Binding NameErrors}" >
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <TextBlock Foreground="Red" Text="{Binding}"/>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Submit" Height="36"
                        IsEnabled="{Binding HasErrorsBindable, Converter={convt:InverseBooleanConverter}}" Width="100"/>
              </StackPanel>

              <ctrls:HeimdallrPlaceholderPasswordBox Grid.Column="1"  Foreground="#FFFFFFFF" Margin="10 0 0 0"
                                                    Icon="Address"
                                                    EyeIcon="Key"
                                                    RightIconToolTip="비밀번호 보기"
                                                    PlaceholderText="비밀번호를 입력하세요"
                                                    PlaceholderForeground="AliceBlue"
                                                    Password="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

              <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10 0 0 0">
                <ctrls:HeimdallrSlider Minimum="0" Maximum="100" Value="{Binding SliderValue, Mode=TwoWay}"
                                       Margin="10 0 0 0" SmallChange="1" LargeChange="10" ToolTip="Slider"/>
                <TextBlock Text="{Binding DisplayText}"  VerticalAlignment="Center"/>
              </StackPanel>

              <ctrls:HeimdallrThemeSwitchToggleButton Grid.Column="3"  IsChecked="{Binding IsLoading, Mode=TwoWay}" />
            </Grid>


            <!-- ViewModelBase 메서드 테스트-->
            <Grid Grid.Row="4" Margin="5" >
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <ctrls:HeimdallrPlaceholderTextBox Grid.Column="0" 
                                                 MaxLength="10"
                                                 Icon="AcitveB"
                                                 BorderBrush="AliceBlue"
                                                 Foreground="#FFFFFFFF"
                                                 UseFloatingLabel="True"
                                                 PlaceholderText="테스트입니다."
                                                 PlaceholderForeground="AliceBlue"
                                                 RightIcon="AcitveB"
                                                 RightIconFill="Azure"
                                                 RightCommand="{Binding MessageCommand}"
                                                 RightIconToolTip="ViewModelBase 테스트"
                                                 Text="{Binding ViewModel, UpdateSourceTrigger=PropertyChanged}"/>

              <Label Grid.Column="1" Name="ErrorLabel" Foreground="Red" Content="{Binding NameErrorsText}" Margin="5 0 0 0" />

              <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >

                <!-- MVVM 버튼 1 -->
                <Button Content="MVVM 버튼 1" Width="120" Height="50"
                        Command="{Binding ButtonClickCommand}"
                        CommandParameter="MVVM 버튼 1"
                        he:FocusVisualHelper.FocusVisualPrimaryBrush="{Binding ButtonPrimaryBrush}"
                        he:FocusVisualHelper.FocusVisualPrimaryThickness="{Binding ButtonPrimaryThickness}"
                        he:FocusVisualHelper.FocusVisualSecondaryBrush="{Binding ButtonSecondaryBrush}"
                        he:FocusVisualHelper.FocusVisualSecondaryThickness="{Binding ButtonSecondaryThickness}"
                        he:FocusVisualHelper.FocusVisualMargin="{Binding ButtonFocusMargin}"
                        he:FocusVisualHelper.UseSystemFocusVisuals="{Binding UseSystemFocusVisuals}"
                        he:FocusVisualHelper.IsTemplateFocusTarget="{Binding IsTemplateFocusTarget}" />

                <!-- MVVM 버튼 2 -->
                <Button Content="MVVM 버튼 2" Width="120" Height="50"
                        Command="{Binding ButtonClickCommand}"
                        CommandParameter="MVVM 버튼 2"
                        he:FocusVisualHelper.FocusVisualPrimaryBrush="{Binding ButtonPrimaryBrush}"
                        he:FocusVisualHelper.FocusVisualPrimaryThickness="{Binding ButtonPrimaryThickness}"
                        he:FocusVisualHelper.FocusVisualSecondaryBrush="{Binding ButtonSecondaryBrush}"
                        he:FocusVisualHelper.FocusVisualSecondaryThickness="{Binding ButtonSecondaryThickness}"
                        he:FocusVisualHelper.FocusVisualMargin="{Binding ButtonFocusMargin}"
                        he:FocusVisualHelper.UseSystemFocusVisuals="{Binding UseSystemFocusVisuals}"
                        he:FocusVisualHelper.IsTemplateFocusTarget="{Binding IsTemplateFocusTarget}" />

              </StackPanel>
            </Grid>

            <!--#region AnimatedContentMenu Row 0-->
            <Grid Grid.Row="5">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>

              <!--열기/닫기 버튼--> 
              <Button Grid.Column="1"
                      Content="Toggle Menu"
                      Width="100" Height="30"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="10"
                      Command="{Binding ToggleMenuCommand}" />

              <ctrls:AnimatedContentMenu Grid.Column="0"
                                         IsOpen="{Binding MenuVisible}"
                                         SlideDirection="Left"
                                         OverlayMode="Push"
                                         Background="#FF456882"
                                         Padding="5"
                                         HorizontalAlignment="Right"
                                         EasingMode="BackEaseIn"
                                         OpenCloseDuration="0:0:1">

                <ctrls:AnimatedContentMenu.Content>
                  <Grid>
                    <Grid.RowDefinitions>
                      <RowDefinition Height="Auto" />
                      <RowDefinition Height="Auto" />
                      <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0" ItemsSource="{Binding MenuItems}" Background="Transparent" BorderThickness="0">
                      <ListBox.ItemTemplate>
                        <DataTemplate>
                          <StackPanel>

                            <!--상위 메뉴 RadioButton-->
                            <ctrls:HeimdallrRadioButton Content="{Binding Title}"
                                         GroupName="MainMenu"
                                         FontSize="18"
                                         Foreground="White"
                                         HorizontalContentAlignment="Left"
                                         Margin="5 10 0 0"
                                         IsChecked="{Binding IsChecked, Mode=TwoWay}">
                              <ctrls:HeimdallrRadioButton.InputBindings>
                                <MouseBinding MouseAction="LeftClick"
                                              Command="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=DataContext.ToggleSubMenuCommand}"
                                              CommandParameter="{Binding}" />
                              </ctrls:HeimdallrRadioButton.InputBindings>
                            </ctrls:HeimdallrRadioButton>
                        
                            <!--하위 메뉴 ItemsControl-->
                            <ItemsControl ItemsSource="{Binding SubItems}">
                              <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                  <Setter Property="Visibility" Value="Collapsed"/>
                                  <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                      <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                  </Style.Triggers>
                                </Style>
                              </ItemsControl.Style>
                              <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                  <ctrls:HeimdallrRadioButton Content="{Binding Title}"
                                                              GroupName="SubMenu"
                                                              FontSize="16"
                                                              Foreground="LightGray"
                                                              HorizontalContentAlignment="Left"
                                                              Margin="20 5 0 5"
                                                              IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                                </DataTemplate>
                              </ItemsControl.ItemTemplate>
                            </ItemsControl>
                          </StackPanel>
                          </DataTemplate>
                        </ListBox.ItemTemplate>
                      </ListBox>
                    <ctrls:HeimdallrRadioButton Grid.Row="2" Icon="Address" IconFill="AliceBlue" 
                                                Content="라디오홈버튼"/>
                  </Grid>
                </ctrls:AnimatedContentMenu.Content>
              </ctrls:AnimatedContentMenu>

              <ctrls:HeimdallrDropdownContentMenu x:Name="MyDropdown" Grid.Column="2" Label="옵션선택" Icon="Menu"
                                                  IconSize="30" 
                                                  Width="200" VerticalAlignment="Top"
                                                  >
                <ctrls:HeimdallrDropdownContentMenu.Content>
                  <StackPanel>
                    <ctrls:HeimdallrFlatButton Content="메뉴 항목 1" Margin="2" Command="{Binding MessageCommand}"/>
                    <ctrls:HeimdallrFlatButton Content="메뉴 항목 2" Margin="2" Command="{Binding MessageCommand}"/>
                    <ctrls:HeimdallrFlatButton Content="메뉴 항목 3" Margin="2"  Command="{Binding MessageCommand}"/>
                    <ctrls:HeimdallrFlatButton Content="메뉴 항목 4" Margin="2" Command="{Binding MessageCommand}"/>
                    <ctrls:HeimdallrFlatButton Content="메뉴 항목 5" Margin="2" Command="{Binding MessageCommand}"/>
                    <ctrls:HeimdallrFlatButton Content="메뉴 항목 6" Margin="2"  Command="{Binding MessageCommand}"/>
                  </StackPanel>
                </ctrls:HeimdallrDropdownContentMenu.Content>
              </ctrls:HeimdallrDropdownContentMenu>
              
              <!-- 슬라이드 메뉴 -->
              <ctrls:HeimdallrSlideContentPanel x:Name="SlideMenu" Grid.Column="3" Margin="5" 
                                       IsOpen="{Binding IsOpen, Mode=TwoWay}" 
                                       Background="#FF2B2B2B"
                                       BorderBrush="#FF555555"
                                       BorderThickness="1"
                                       ToolTip="SlideContentPanel">
                <ctrls:HeimdallrSlideContentPanel.Content>
                  
                    <StackPanel>
                      <ctrls:HeimdallrRadioButton Content="슬라이드메뉴항목 1" Icon="Account" Margin="2" Command="{Binding MessageCommand}"/>
                      <ctrls:HeimdallrRadioButton Content="슬라이드메뉴항목 2" Icon="AccountA" Margin="2" Command="{Binding MessageCommand}"/>
                      <ctrls:HeimdallrRadioButton Content="메뉴 항목5" Icon="AccountBox" Margin="2"  Command="{Binding MessageCommand}"/>
                    </StackPanel>
                
                </ctrls:HeimdallrSlideContentPanel.Content>
              </ctrls:HeimdallrSlideContentPanel>

              <!-- 메뉴 열기 버튼 -->
              <ctrls:HeimdallrSwitchCheckBox Grid.Column="4" Icon="Ghost1" Width="120" Margin="10 0 0 0"
                                OnLabel="슬라이드ON" OffLabel="슬라이드OFF" OnLebelForeground="#FFFFFFFF"
                                OffLebelForeground="#FF8C3061" IsChecked="{Binding IsOpen, Mode=TwoWay}"/>
             
            </Grid>
            <!--#endregion-->

            <Grid Grid.Row="6">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <TextBlock Grid.Column="0" Text="{Binding BusyMessage, UpdateSourceTrigger=PropertyChanged}" FontSize="20"
                         Foreground="Red" />

              <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                  <ctrls:HeimdallrIcon Icon="Read" Fill="White" IconSize="30" />
                </StackPanel>
              </Grid>
            </Grid>
           
            
            
          </Grid>
        </ctrls:HeimdallrScrollViewer>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>