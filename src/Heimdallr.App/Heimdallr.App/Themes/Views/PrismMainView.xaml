              </ctrls:AnimatedContentMenu>
            </Grid>-->
            <!--#endregion-->

            <Grid Grid.Row="4">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <StackPanel Grid.Column="0" Margin="20">
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                <ItemsControl ItemsSource="{Binding NameErrors}">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <TextBlock Foreground="Red" Text="{Binding}"/>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Submit" 
                        IsEnabled="{Binding HasErrorsBindable, Converter={convt:InverseBooleanConverter}}" Width="100"/>
              </StackPanel>

              <ctrls:HeimdallrPlaceholderPasswordBox Grid.Column="1"  Foreground="#FFFFFFFF"
                                                    Icon="Address"
                                                    EyeIcon="Key"
                                                    PlaceholderText="비밀번호를 입력하세요"
                                                    PlaceholderForeground="AliceBlue"
                                                    Password="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>

           
            <!-- ViewModelBase 메서드 테스트-->
            <Grid Grid.Row="5" Margin="5" >
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <ctrls:HeimdallrPlaceholderTextBox Grid.Column="0" 
                                                 MaxLength="10"
                                                 Icon="AcitveB"
                                                 BorderBrush="AliceBlue"
                                                 Foreground="#FFFFFFFF"
                                                 UseFloatingLabel="True"
                                                 PlaceholderText="테스트입니다."
                                                 PlaceholderForeground="AliceBlue"
                                                 RightIcon="AcitveB"
                                                 RightIconFill="Azure"
                                                 RightCommand="{Binding MessageCommand}"
                                                 RightIconToolTipContent="ViewModelBase 테스트"
                                                 Text="{Binding ViewModel, UpdateSourceTrigger=PropertyChanged}"/>

              <Label Grid.Column="1" Name="ErrorLabel" Foreground="Red" Content="{Binding NameErrorsText}" />

            </Grid>
            
            
            <TextBlock Grid.Row="6" Text="{Binding BusyMessage, UpdateSourceTrigger=PropertyChanged}" FontSize="20"
               Foreground="Red" />
            
            
          </Grid>
        </ScrollViewer>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>