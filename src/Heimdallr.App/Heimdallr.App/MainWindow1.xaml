<Window x:Class="Heimdallr.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Heimdallr.App"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Heimdallr.App.ViewModel"
        xmlns:ui="clr-namespace:Heimdallr.UI.Controls;assembly=Heimdallr.UI"
        xmlns:convt="clr-namespace:Heimdallr.UI.Converters;assembly=Heimdallr.UI"
        Title="MainWindow" Height="1000" Width="1800"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True">

  <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <!-- HeimdallrIcon-->
      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ui:HeimdallrIcon Grid.Column="0" Icon="Sale" IconSize="50"  Fill="Chartreuse"/>
        <ui:HeimdallrIcon Grid.Column="1" IconSize="100" Image="HanJimin" />
      </Grid>

      <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />  <!--0 -->
          <ColumnDefinition Width="Auto" />  <!--1 -->
          <ColumnDefinition Width="Auto" />  <!--2 -->
          <ColumnDefinition Width="Auto" />  <!--3 -->
          <ColumnDefinition Width="Auto" />  <!--4 -->
          <ColumnDefinition Width="Auto" />  <!--5 -->
          <ColumnDefinition Width="Auto" />  <!--6 -->
          <ColumnDefinition Width="Auto" />  <!--7 -->
          <ColumnDefinition Width="Auto" />  <!--8 -->
          <ColumnDefinition Width="Auto" />  <!--9 -->
          <ColumnDefinition Width="Auto" />  <!--10 -->
          <ColumnDefinition Width="Auto" />  <!--11 -->
          <ColumnDefinition Width="Auto" />  <!--12 -->
          <ColumnDefinition Width="Auto" />  <!--13 -->
          <ColumnDefinition Width="Auto" />  <!--14 -->
          <ColumnDefinition Width="*"    />  <!--13 -->
        </Grid.ColumnDefinitions>
        <ui:HeimdallrCloseButton Grid.Column="0" IconSize="25" Fill="AliceBlue"
                                 Command="{Binding MessageCommand}"/>
        <ui:HeimdallrMaximizeButton Grid.Column="1" IconSize="25" Fill="Aqua"
                                    Command="{Binding MessageCommand}"/>
        <ui:HeimdallrMinimizeButton Grid.Column="2" IconSize="25"  Fill="Chocolate"
                                    Command="{Binding MessageCommand}"/>
        <ui:HeimdallrHoldSubmitButton Grid.Column="3" Content="HoldSubmit"
                                      Command="{Binding MessageCommand}"/>
        <ui:HeimdallrFlatButton Grid.Column="4"  Content="FlatButton"
                                Command="{Binding MessageCommand}" CornerRadius="7"/>
        <ui:HeimdallrPulseEllipseButton Grid.Column="5" Icon="Success" Content="PulesEllipseButon"
                                        Command="{Binding MessageCommand}" />
        <ui:HeimdallrPulseButton Grid.Column="6" Icon="AcitveA" Background="#FF50577A"
                                 ButtonText="PulseButton" Height="40" Width="120"
                                 Command="{Binding MessageCommand}" CornerRadius="7" />
        <ui:HeimdallrHoldIconButton Grid.Column="7" Icon="AcitveA" ButtonText="HoldIconButton"
                                    BackgroundRectangleFill="Beige" HoldDuration="0:0:0.8"
                                    Command="{Binding MessageCommand}"/>
        <ui:HeimdallrSwitchCheckBox Grid.Column="8" Icon="Ghost1" Width="120" 
                                    OnLabel="ON할아버지" OffLabel="OFF할아버지" OnLebelForeground="#FFFFFFFF"
                                    OffLebelForeground="#FF8C3061"/>
        <ui:HeimdallrIconToggleButton Grid.Column="9" Icon="Success_Flag"  IconMouseOverFill="Firebrick"/>
        <ui:HeimdallrComboBox Grid.Column="10" Icon="Success" IconMouseOverFill="AliceBlue"
                              PlaceholderText="역할" PlaceholderForeground="AliceBlue" 
                              SelectedItemForeground="#FFF25912"
                              ItemsSource="{Binding EmployeePosition}"
                              SelectedValue="{Binding SelectedEmployeePosition, Mode=TwoWay}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="Description"/>
        <!-- 선택된 아이템 표시 -->
        <TextBlock Grid.Column="11"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Foreground="Black"
                   Text="{Binding SelectedEmployeePosition}"/>

        <ui:HeimdallrRepeatButton Grid.Column="12" Background="Aqua" Width="100" Height="35" 
                                  BorderBrush="Black" BorderThickness="2" Content="리피트버튼"/>

      </Grid>
      <Grid Grid.Row="3" >
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <!--0 -->
          <ColumnDefinition Width="Auto" />
          <!--1 -->
          <ColumnDefinition Width="Auto" />
          <!--2 -->
          <ColumnDefinition Width="Auto" />
          <!--3 -->
          <ColumnDefinition Width="Auto" />
          <!--4 -->
          <ColumnDefinition Width="Auto" />
          <!--5 -->
          <ColumnDefinition Width="Auto" />
          <!--6 -->
          <ColumnDefinition Width="Auto" />
          <!--7 -->
          <ColumnDefinition Width="Auto" />
          <!--8 -->
          <ColumnDefinition Width="Auto" />
          <!--9 -->
          <ColumnDefinition Width="Auto" />
          <!--10 -->
          <ColumnDefinition Width="Auto" />
          <!--11 -->
          <ColumnDefinition Width="Auto" />
          <!--12 -->
          <ColumnDefinition Width="Auto" />
          <!--13 -->
          <ColumnDefinition Width="Auto" />
          <!--14 -->
          <ColumnDefinition Width="*"    />
          <!--13 -->
        </Grid.ColumnDefinitions>

        <ui:HeimdallrRepeatButton Grid.Column="0" Background="Aqua" Width="30" Height="30" 
                          BorderBrush="Black" BorderThickness="0"
                          Icon="AcitveB" IconFill="BlanchedAlmond" CornerRadius="7"/>

        <ui:HeimdallrThumb Grid.Column="1" Margin="10 0 0 0" Background="Red" Width="120" Height="30"
                           MouseOverBrush="Blue" IsDraggingBrush="GreenYellow"/>

        <ui:HeimdallrScrollBar Grid.Column="2" Margin="10 0 0 0" />
      </Grid>

      <ui:FlipAnimationCard Grid.Row="3" Image="WangchuranA" Icon="Account" CardWidth="50" CardHeight="50" />

      <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 열기/닫기 버튼 -->
        <Button Grid.Row="2" Grid.Column="0"
                Content="Toggle Menu"
                Width="100" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Command="{Binding ToggleMenuCommand}" />

        <ui:AnimatedContentMenu 
                                Grid.Row="0"
                                IsOpen="{Binding MenuVisible}"
                                SlideDirection="Left"
                                OverlayMode="Push"
                                Background="#FF456882"
                                Padding="5"
                                HorizontalAlignment="Right"
                                EasingMode="BackEaseIn"
                                OpenCloseDuration="0:0:1">

          <ui:AnimatedContentMenu.Content>
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
              </Grid.RowDefinitions>

              <ListBox Grid.Row="0" ItemsSource="{Binding MenuItems}" Background="Transparent" BorderThickness="0">
                <ListBox.ItemTemplate>
                  <DataTemplate>
                    <StackPanel>
                      <!-- 상위 메뉴 RadioButton -->
                      <RadioButton Content="{Binding Title}"
                             GroupName="MainMenu"
                             FontSize="18"
                             Foreground="White"
                             HorizontalContentAlignment="Left"
                             Margin="5 10 0 0"
                             IsChecked="{Binding IsChecked, Mode=TwoWay}">
                        <RadioButton.InputBindings>
                          <MouseBinding MouseAction="LeftClick"
                                      Command="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=DataContext.ToggleSubMenuCommand}"
                                      CommandParameter="{Binding}" />
                        </RadioButton.InputBindings>
                      </RadioButton>

                      <!-- 하위 메뉴 ItemsControl -->
                      <ItemsControl ItemsSource="{Binding SubItems}">
                        <ItemsControl.Style>
                          <Style TargetType="ItemsControl">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                              <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                              </DataTrigger>
                            </Style.Triggers>
                          </Style>
                        </ItemsControl.Style>
                        <ItemsControl.ItemTemplate>
                          <DataTemplate>
                            <RadioButton Content="{Binding Title}"
                                         GroupName="SubMenu"
                                         FontSize="16"
                                         Foreground="LightGray"
                                         HorizontalContentAlignment="Left"
                                         Margin="20 5 0 5"
                                         IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                          </DataTemplate>
                        </ItemsControl.ItemTemplate>
                      </ItemsControl>
                    </StackPanel>
                  </DataTemplate>
                </ListBox.ItemTemplate>
              </ListBox>

              <ui:HeimdallrHoldIconButton  Icon="Account" Grid.Row="1" Content="sdfsdfsf" />
              <ui:HeimdallrRadioButton Grid.Row="2" Icon="Address" IconFill="AliceBlue" 
                                       
                                       Content="라이도홈버튼"/>
       
            </Grid>
          </ui:AnimatedContentMenu.Content>
        </ui:AnimatedContentMenu>
      </Grid>

      <Grid Grid.Row="4">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20">
          <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
          <ItemsControl ItemsSource="{Binding NameErrors}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <TextBlock Foreground="Red" Text="{Binding}"/>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
          <Button Content="Submit" 
                IsEnabled="{Binding HasErrorsBindable, Converter={convt:InverseBooleanConverter}}" Width="100"/>
        </StackPanel>
      </Grid>

      <TextBlock Grid.Row="5" Text="{Binding BusyMessage, UpdateSourceTrigger=PropertyChanged}" FontSize="20"
                 Foreground="Red" />
    </Grid>
  </ScrollViewer>
</Window>
